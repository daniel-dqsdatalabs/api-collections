#!/usr/bin/env dothttp

// To retrieve the users' data specified in the API request. You can specify the type of users that needs to be retrieved using the Users API. For example, use type=AllUsers, to get the list of all the CRM users available. // // Refer to [help doc](https://www.zoho.com/crm/developer/docs/api/v2.1/get-users.html) to know more. 
@name("Users Data")
GET "https://{{api-domain}}/crm/v2.1/users"
"Authorization": "{{authorization-token}}"


// To add a user to your organization.
@name("Add User")
POST "https://{{api-domain}}/crm/v2.1/users"
"Content-Type": "application/json"
data('{
  "users": [
    {
      "role": "{{role_id}}",
      "first_name": "Patricia",
      "email": "Patricia@abcl.com",
      "profile": "{{profile_id}}",
      "last_name": "Boyle"
    }
  ]
}')


// To update the details of a user of your organization.
@name("Update User")
PUT "https://{{api-domain}}/crm/v2.1/users"
"Content-Type": "application/json"
data('{
    "users": [
        {
            "id": "{{user_id}}",
            "phone": "123456789",
            "email": "newtocrm@zoho.com",
            "dob": "1990-12-31"
        }
    ]
}')


// To delete a user from your organization.
@name("Delete User")
DELETE "https://{{api-domain}}/crm/v2.1/users/{{user_id}}"




