#!/usr/bin/env dothttp

// To get the Notes associated with a Vendor.
@name("Notes")
GET "https://{{api-domain}}/crm/v2.1/Vendors/{{record_id}}/Notes"


// To get the Products associated with a Vendor.
@name("Products")
GET "https://{{api-domain}}/crm/v2.1/Vendors/{{record_id}}/Products"


// To get the Attachments associated with a Vendor.
@name("Attachments")
GET "https://{{api-domain}}/crm/v2.1/Vendors/{{record_id}}/Attachments"


// To get the Purchase Orders associated with a Vendor.
@name("Purchase Orders")
GET "https://{{api-domain}}/crm/v2.1/Vendors/{{record_id}}/PurchaseOrders"


// To get the Contacts associated with a Vendor.
@name("Contacts")
GET "https://{{api-domain}}/crm/v2.1/Vendors/{{record_id}}/Contacts"


// To get the Activities associated with a Vendor.
@name("Activities")
GET "https://{{api-domain}}/crm/v2.1/Vendors/{{record_id}}/Activities"


// To get the Closed Activities associated with a Vendor.
@name("Closed Activities")
GET "https://{{api-domain}}/crm/v2.1/Vendors/{{record_id}}/Activities_History"



