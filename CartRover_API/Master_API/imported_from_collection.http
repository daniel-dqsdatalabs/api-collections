basicauth("{{api_user}}", "{{api_key}}")
"Content-Type": "application/json"
data('{
  "company": {
      "company": "My Company Name",
      "phone": "1-805-399-2278"
  },
  "user": {
      "name": "Mrs. Bigglesworth",
      "email": "biggle@evil.com",
      "password": "Optional Password",
      "repeat_password": "Optional Password"
  }
}')



