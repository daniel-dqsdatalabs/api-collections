#!/usr/bin/env dothttp

@name("Get all customers")
GET "https://api-101.glitch.me/customers"
"user-id": "{{userId}}"


@name("Get one customer")
GET "https://{{apiUrl}}/customer"
"user-id": "{{userId}}"


@name("Add new customer")
POST "https://{{apiUrl}}/customer"
"user-id": "{{userId}}"


@name("Update customer")
PUT "https://{{apiUrl}}/customer/:customer_id"
"user-id": "{{userId}}"


@name("Remove customer")
DELETE "https://{{apiUrl}}/customer/:customer_id"
"user-id": "{{userId}}"



