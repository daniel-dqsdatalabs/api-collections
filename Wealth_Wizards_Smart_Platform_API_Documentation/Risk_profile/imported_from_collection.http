#!/usr/bin/env dothttp

// Calculates an attitude to risk profile for a given tenant. Tenants can configure their own risk provider.

@name("/risk-profile/v1/attitude-to-risk?tenant={{TENANT}}")
POST "https://{{NAMESPACE_URL}}{{RISK_PROFILE_PORT}}/risk-profile/v1/attitude-to-risk"
"Content-Type": "application/json"
"Authorization": "{{JWT_TOKEN}}"
? "tenant"= "{{TENANT}}"
data('{"comfortable_investing_percentage":"no_opinion","risk_is_opportunity":"no_opinion","anxious_about_investments":"no_opinion","describe_as_cautious":"no_opinion","look_for_safer":"no_opinion","prefer_bank_deposits":"no_opinion","concerned_about_volatility":"no_opinion","accept_losses":"no_opinion","risks_important":"no_opinion","comfortable_investing_high_risk":"agree"}')



