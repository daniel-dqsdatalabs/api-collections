#!/usr/bin/env dothttp

@name("Obter Token")
POST "https://oauth.itau.com.br/identity/connect/token"
"Content-Type": "application/x-www-form-urlencoded"
"Authorization": "Basic headerValue"
data({
    "scope": [
        "readonly"
    ],
    "grant_type": [
        "client_credentials"
    ],
    "client_id": [
        "{{boleto_client_id}}"
    ],
    "client_secret": [
        "{{boleto_client_secret}}"
    ]
})


