#!/usr/bin/env dothttp

// Gets list of claims from the financial institution

@name("Find claims")
GET "https://{{baseUrl}}/dict/claims"
? "ispb"= "<string>"
? "donor"= "<boolean>"
? "claimer"= "<boolean>"
? "status"= "<string>"
? "type"= "<string>"
? "skip"= "<integer>"
? "limit"= "<integer>"


// Creates a new claim in DICT

@name("Create a new claim")
POST "https://{{baseUrl}}/dict/claims"
"Content-Type": "application/json"
data('{
    "type": "<string>",
    "key": "<string>",
    "keyType": "<string>",
    "account": {
        "ispb": "<string>",
        "number": "<string>",
        "branch": "<string>",
        "type": "<string>",
        "user": {
            "name": "<string>",
            "type": "<string>",
            "taxId": "<string>"
        },
        "externalId": "<string>",
        "openingDate": "<dateTime>"
    }
}')



