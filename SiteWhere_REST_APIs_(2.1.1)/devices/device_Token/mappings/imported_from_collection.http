#!/usr/bin/env dothttp

@name("Create new device element mapping")
POST "https://{{baseUrl}}/devices/:deviceToken/mappings"
"Authorization": ""
"Content-Type": "application/json"
data('{
    "device": {
        "activeDeviceAssignmentIds": [
            "<uuid>",
            "<uuid>"
        ],
        "comments": "<string>",
        "createdBy": "<string>",
        "createdDate": "<dateTime>",
        "deviceElementMappings": [
            {
                "deviceElementSchemaPath": "<string>",
                "deviceToken": "<string>"
            },
            {
                "deviceElementSchemaPath": "<string>",
                "deviceToken": "<string>"
            }
        ],
        "deviceTypeId": "<uuid>",
        "id": "<uuid>",
        "metadata": "<object>",
        "parentDeviceId": "<uuid>",
        "status": "<string>",
        "token": "<string>",
        "updatedBy": "<string>",
        "updatedDate": "<dateTime>"
    },
    "deviceElementSchemaPath": "<string>",
    "deviceToken": "<string>"
}')


@name("Delete existing device element mapping")
DELETE "https://{{baseUrl}}/devices/:deviceToken/mappings"
"Authorization": ""
? "path"= "<string>"



