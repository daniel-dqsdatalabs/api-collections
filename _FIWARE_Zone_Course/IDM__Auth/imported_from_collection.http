#!/usr/bin/env dothttp

@name("Get auth token")
POST "https://{{host}}/v3/auth/tokens"
"Content-Type": "application/json"
data('{
    "auth": {
        "identity": {
            "methods": [
                "password"
            ],
            "password": {
                "user": {
                    "domain": {
                        "name": "{{service}}"
                    },
                    "name": "{{user}}",
                    "password": "{{password}}"
                }
            }
        },
        "scope": {
            "project": {
                "domain": {
                    "name": "{{service}}"
                },
                "name": "{{subservice}}"
            }
        }
    }
}')



