#!/usr/bin/env dothttp

// 获得所有的比赛信息

@name("getAllRace")
GET "https://{{url}}/api/v1/race/all"


// 获得所有的比赛信息，分页显示

@name("getPageRace")
GET "https://{{url}}/api/v1/race/split"
? "page"= "1"


// 获得一个id，比赛信息
