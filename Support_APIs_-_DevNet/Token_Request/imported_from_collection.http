#!/usr/bin/env dothttp

// Get a token via the client credentials grant type and set a Postman global variable "token" to its value for use in API calls.
@name("Get Client Credentials Token")
POST "https://{{authServer}}/as/token.oauth2"
data({
    "grant_type": [
        "client_credentials"
    ],
    "client_id": [
        "{{clientId}}"
    ],
    "client_secret": [
        "{{clientSecret}}"
    ]
})



