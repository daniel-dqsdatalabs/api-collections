#!/usr/bin/env dothttp

// device_id - необязательный параметр // // Если на сервере включена обязательная двухфакторная авторизация и в профиле не указан phone_number, то вернет:// ```// {"result":"ok","phone_token":"{phone_token}"}// ```// // Если на сервере включена двухфакторная авторизация, то в ответе придет 2fa_token: // ```// {"result":"ok","2fa_token":"{2fa_token}"}// ```// Если не нужно проверять второй фактор, то сразу вернет access_token и refresh_token:// ```// {"result":"ok","access_token":"{access_token}","refresh_token":"{refresh_token}"}// ```// 
@name("Аутентификация через логин и пароль")
POST "http://auth.test.valo.lab/auth/login"
"Content-Type": "application/json"
data('{"login":"{login}","password":"{password}","device_id":"{device_id}"}')


// В случае успеха вернет access_token и refresh_token// ```// {"result":"ok","access_token":"{access_token}","refresh_token":"{refresh_token}"}// ```
@name("Проверка кода для 2fa аутентификации")
POST "http://auth.test.valo.lab/auth/2fa_tokens"
"Content-Type": "application/json"
data('{"2fa_token":"{2fa_token}","code":"12345"}')


// В случае успеха вернет 2fa_token: // ```// {"result":"ok","2fa_token":"{2fa_token}"}// ```
@name("Привязка телефона для 2fa аутентификации")
POST "http://auth.test.valo.lab/auth/contacts/phone_numbers/{phone}"
"Content-Type": "application/json"
data('{"phone_token":"{phone_token}","phone":"{phone}"}')


// В случае успеха вернет новый access_token:// ```// {"result":"ok","access_token":"{access_token}","refresh_token":"{refresh_token}"}// ```
@name("Получение нового access_token")
POST "http://auth.test.valo.lab/auth/refresh_tokens"
"Content-Type": "application/json"
data('{"refresh_token":"{refresh_token}"}')


// Если на сервере включена двухфакторная авторизация, то в ответе придет 2fa_token: // ```// {"result":"ok","2fa_token":"{2fa_token}"}// ```// Если не нужно проверять второй фактор, то сразу вернет access_token и refresh_token:// ```// {"result":"ok","access_token":"{access_token}","refresh_token":"{refresh_token}"}// ```
@name("Аутентификация SSO")
POST "http://auth.test.valo.lab/auth/login/sso"
"Content-Type": "application/x-www-form-urlencoded"
"Authorization": "Negotiate <token>"
data('{"device_id":"{device_id}"}')


// Параметры: access_token администратора и user_id пользователя// // В случае успеха вернет новый access_token:// ```// {"result":"ok","access_token":"{access_token}","refresh_token":"{refresh_token}"}// ```
@name("Аутентификация администратора для входа под другим пользователем")
POST "http://auth.test.valo.lab/auth/login/{user_id}"
"Content-Type": "application/x-www-form-urlencoded"
data('{"access_token":"{access_token}"}')


// Параметры: access_token // // В случае успеха вернет новый access_token:// ```// {"result":"ok","access_token":"{access_token}","refresh_token":"{refresh_token}"}// ```
@name("Добавление device_id в access_token")
POST "http://auth.test.valo.lab/auth/devices/{device_id}"
"Content-Type": "application/x-www-form-urlencoded"
data('{"access_token":"{access_token}"}')



