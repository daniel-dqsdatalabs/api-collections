#!/usr/bin/env dothttp

// Login user and return token

@name("http://localhost:9000/auth/login")
POST "http://localhost/auth/login"
json({
    "username": "batman",
    "password": "batman"
})


// Register a new user

@name("http://localhost:9000/auth/register")
POST "http://localhost/auth/register"
json({
    "username": "joker",
    "password": "batman",
    "email": "jacknapier@gotham.com",
    "name": "Joker"
})



