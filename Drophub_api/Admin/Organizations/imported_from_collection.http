@name("[Admin] get organizations list")
GET "https://{{root}}admin/organizations"
"Content-Type": "application/json"
"token": "{{admintoken}}"
? "page"= "1"
? "limit"= "10"
? "q"= "o"



@name("[Admin] get organization Detail")
GET "https://{{root}}admin/organizations/:_id"
"Content-Type": "application/json"
"token": "{{admintoken}}"



