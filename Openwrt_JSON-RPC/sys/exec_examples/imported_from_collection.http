#!/usr/bin/env dothttp

// Execute a given shell command and capture its standard output

@name("system_board")
POST "https://{{HOST}}/sys"
"Content-Type": "application/json"
data('{"method":"exec", "params":["ubus call system board"]}')


// Execute a given shell command and capture its standard output

@name("system_info")
POST "https://{{HOST}}/sys"
"Content-Type": "application/json"
data('{"method":"exec", "params":["ubus call system info"]}')



