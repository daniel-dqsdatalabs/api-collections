#!/usr/bin/env dothttp

@name("Sent Notification Template")
POST "https://{{url}}/{{apiVersion}}/api/whatsapp/{{appId}}/notification"
"Content-Type": "application/json"
"Authorization": "Bearer {{jwt}}"
data('{
    "storage": "full",
    "destination": {
        "integrationId": "{{integrationId}}",
        "destinationId": "{{phone}}"
    },
    "author": {
        "name": "{{authorName}}",
        "email": "{{authorEmail}}",
        "role": "appMaker"
    },
    "messageSchema": "whatsapp",
    "message": {
        "type": "template",
        "template": {
            "namespace": "{{templateNamespace}}",
            "name": "{{your_template_name}}",
            "language": {
                "policy": "deterministic",
                "code": "en"
            },
            "components": [
                {
                    "type": "body",
                    "parameters": [
                        {
                            "type": "text",
                            "text": "Parameter 1"
                        },
                        {
                            "type": "text",
                            "text": "Parameter 2"
                        },
                        {
                            "type": "text",
                            "text": "Parameter 3"
                        }
                    ]
                }
            ]
        }
    }
}')


