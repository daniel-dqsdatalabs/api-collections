#!/usr/bin/env dothttp

// Create discount voucher without code

@name("Create invalid voucher")
POST "https://{{url}}/vouchers"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"
data('{
    "type": "DISCOUNT_VOUCHER",
    "discount": {
        "percent_off": "10.0",
        "type": "PERCENT"
    },
    "redemption": {
        "quantity": "0" 
    },
    "category": "postman",
    "validation_rules": {
        "orders": {
        "junction":"AND",
        "total_amount": {
        "$more_than": [999]
       }
      }
    }
}')


@name("Try to Redeem invalid coupon")
POST "https://{{url}}/vouchers/{{voucher-code}}/redemption"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"
data('{
  "customer": {
    "source_id": "{{test-customer-email}}", "metadata": {"a": 2}
  },
  "order": {
  	"source_id": "{{order-test-source-id}}",
    "amount": 10000,
    "status": "PAID",
    "items": [{"quantity": 1, "amount": 10000}]
  }
}')


@name("--- delay ---")
GET "https://{{delayUrl}}/"



