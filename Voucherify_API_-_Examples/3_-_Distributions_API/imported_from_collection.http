GET "https://{{url}}/exports/{{export-id}}"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"
data('{
 "exported_object": "voucher",
  "parameters" : {
    "filter" : {
      "categories" : {
        "conditions" : {
          "$in" : ["postman"]
        }
      }
    }
  }
}')



