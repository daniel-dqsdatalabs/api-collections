#!/usr/bin/env dothttp

@name("Create campaign")
POST "https://{{url}}/campaigns"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"
data('{
    "name": "{{test-campaign-name}}",
    "start_date": "2016-09-26T00:00:00Z",
    "type": "AUTO_UPDATE",
    "vouchers_count": 10,
    "voucher": {
        "type": "DISCOUNT_VOUCHER",
        "discount": {
            "percent_off": "10.0",
            "type": "PERCENT"
        },
        "redemption": {
          "quantity": 1
        },
        "code_config": {
            "pattern": "VR-PROMO-#######"
        }
    },
    "metadata": {
      "test": true
    }
}')


@name("--- delay ---")
GET "https://{{delayUrl}}/"



@name("Create Product")
POST "https://{{url}}/products"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"
data('{
    "name" : "Apple iPhone 7",
    "source_id" : "internal_crm_id_{{$timestamp}}",
    "attributes": [ "color", "memory" ],
    "metadata": {
      "test": true
    }
}')


@name("Add SKU")
POST "https://{{url}}/products/{{product-id}}/skus"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"
data('{
    "sku" : "APPLE_IPHONE_7",
    "source_id" : "internal_erp_sku_id_{{$timestamp}}",
    "currency": "USD",
    "price": 70000,
    "attributes": {
      "color": "black",
      "memory": "32"
    }
}')


@name("Create Validation Rules")
POST "https://{{url}}/validation-rules"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"
data('{
	"name": "postman: Required SKU",
	"rules": {
		"1": {
			"name": "sku.id", 
			"conditions": {
				"$is":[{ "id": "{{sku-id}}" }]
			}
		}, 
		"2": {
			"name": "order.items.count",
			"conditions": {
				"$more_than": [1]
			}
		},
		"logic": "1 and 2"
	}
}')


@name("Attach Validation rules to Campaign")
POST "https://{{url}}/validation-rules/{{validation-rule-id}}/assignments"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"
data('{
	"campaign": "{{test-campaign-name}}"
}')


@name("Get Validation Rules")
GET "https://{{url}}/validation-rules/{{validation-rule-id}}"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"
data('{
    "campaign_name" : "{{createdCampaignName}}",
    "junction" : "AND",
  "skus": {
      "junction":"AND",
      "conditions": {
          "$is":[
              { "id": "{{createdSKUId}}" }
          ]
      }
  },
  "orders": {
    "junction":"AND",
    "total_amount":null,
    "products_count":{
      "$more_than":[1]
    }
  }
}')


@name("Publish voucher")
POST "https://{{url}}/vouchers/publish"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"
data('{
  "campaign": "{{test-campaign-name}}",
  "customer": { "source_id": "test@voucherify.io" }
}')


@name("Redeem try with missing order")
POST "https://{{url}}/vouchers/{{voucher-code}}/redemption"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"
data('{
  "customer": {
    "source_id": "{{test-customer-email}}",
    "email": "{{test-customer-email}}"
  }
}')


@name("Redeem")
POST "https://{{url}}/vouchers/{{voucher-code}}/redemption"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"
data('{
  "customer": {
    "source_id": "{{test-customer-email}}",
    "email": "{{test-customer-email}}"
  },
  "order": {
    "amount": 30000,
    "items": [
      { "sku_id": "{{sku-id}}", "quantity": 2 }
    ]
  }
}')


@name("--- delay ---")
GET "https://{{delayUrl}}/"



@name("Delete product")
DELETE "https://{{url}}/products/{{product-id}}"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"



@name("Delete customer")
DELETE "https://{{url}}/customers/{{customer-id}}"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"



@name("Delete campaign")
DELETE "https://{{url}}/campaigns/{{test-campaign-name}}"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"
? "force"= "true"



@name("Delete Validation Rule")
DELETE "https://{{url}}/validation-rules/{{validation-rule-id}}"
"X-App-Id": "{{X-App-Id}}"
"X-App-Token": "{{X-App-Token}}"
"Content-Type": "application/json"
data('{
    "campaign_name" : "{{createdCampaignName}}",
    "junction" : "AND",
  "skus": {
      "junction":"AND",
      "conditions": {
          "$is":[
              { "id": "{{createdSKUId}}" }
          ]
      }
  },
  "orders": {
    "junction":"AND",
    "total_amount":null,
    "products_count":{
      "$more_than":[1]
    }
  }
}')



