#!/usr/bin/env dothttp

@name("1、查询素材列表")
GET "http://localhost/wx/web/media/list"
files(
	("wxId", "a7b5677c-4322-44d8-b8c1-8858cec3efd2")
)


@name("3、添加素材")
POST "http://localhost/wx/web/media"
"Content-Type": "application/x-www-form-urlencoded"
files(
	("mediaName", "test222"),
	("contentType", "1111"),
	("localUrl", "/profile/wx/2019/12/14/c0a3ce1d47a3eb4c8f455707e7c51550.png"),
	("remark", "备注"),
	("delFlag", "0")
)


@name("4、修改素材")
PUT "http://localhost/wx/web/media"
"Content-Type": "application/json"
data(' {
        "wxId": "2",
        "mediaId": "3333",
        "mediaType": "333",
        "mediaName": "素22材3333",
        "contentType": "3",
        "contentLength": "3",
        "localUrl": "3",
        "url": "3",
        "isTemp": "3",
        "remark": "备注3333",
        "delFlag": "0"
    }')


@name("5、删除素材")
DELETE "http://localhost/wx/web/media/2"



