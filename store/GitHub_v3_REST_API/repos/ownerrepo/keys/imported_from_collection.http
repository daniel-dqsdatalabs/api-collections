#!/usr/bin/env dothttp

# {{baseUrl=api.github.com}}

@name("List deploy keys")
GET "https://{{baseUrl}}/repos/{{owner}}/{{repo/keys}}/"
? "per_page"= "30"
? "page"= "1"


@name("Create a deploy key")
POST "https://{{baseUrl}}/repos/{{owner}}/{{repo/keys}}/"
"Content-Type": "application/json"
json({
    "title": "octocat@octomac",
    "key": "ssh-rsa AAA...",
    "read_only": true
})



