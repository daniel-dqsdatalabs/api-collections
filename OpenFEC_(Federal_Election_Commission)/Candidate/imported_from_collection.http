? "document_type"= "<string>"
? "form_category"= "<string>"
? "form_category"= "<string>"
? "report_type"= "<string>"
? "report_type"= "<string>"
? "report_year"= "<integer>"
? "report_year"= "<integer>"
? "sort_nulls_last"= "false"
? "request_type"= "<string>"
? "request_type"= "<string>"
? "cycle"= "<integer>"
? "cycle"= "<integer>"
? "sort_null_only"= "false"
? "committee_type"= "<string>"
? "primary_general_indicator"= "<string>"
? "primary_general_indicator"= "<string>"
? "sort_hide_null"= "false"
? "is_amended"= "<boolean>"
? "sort"= "-receipt_date"
? "amendment_indicator"= "<string>"
? "amendment_indicator"= "<string>"
? "file_number"= "<integer>"
? "file_number"= "<integer>"
? "office"= "<string>"
? "office"= "<string>"
