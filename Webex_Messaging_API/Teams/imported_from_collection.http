#!/usr/bin/env dothttp

// List teams.// // https://developer.webex.com/endpoint-teams-get.html
@name("List teams")
GET "https://{{WEBEXAPI}}/teams"
"Authorization": "Bearer {{access_token}}"


// Create a new team.// // https://developer.webex.com/endpoint-teams-post.html
@name("Create a team")
POST "https://{{WEBEXAPI}}/teams"
"Authorization": "Bearer {{access_token}}"
"Content-Type": "application/json"
data('{
    "name": "European Football Championship"
}')


// Show details for a team.// // https://developer.webex.com/endpoint-teams-teamId-get.html
@name("Get team details")
GET "https://{{WEBEXAPI}}/teams/{{_team}}"
"Authorization": "Bearer {{access_token}}"


// Update a team.// // https://developer.webex.com/endpoint-teams-teamId-put.html
@name("Update a team")
PUT "https://{{WEBEXAPI}}/teams/{{_team}}"
"Authorization": "Bearer {{access_token}}"
"Content-Type": "application/json"
data('{
    "name": "European Football Championship 2018"
}')


// List rooms.// // By default, lists rooms to which the authenticated user belongs.// // https://developer.webex.com/endpoint-rooms-get.html
@name("List Team rooms")
GET "https://{{WEBEXAPI}}/rooms"
"Authorization": "Bearer {{access_token}}"
? "teamId"= "{{_team}}"


// Creates a room. The authenticated user is automatically added as a member of the room. See the Memberships API to learn how to add more people to the room.// // https://developer.webex.com/endpoint-rooms-post.html
@name("Create a Team room")
POST "https://{{WEBEXAPI}}/rooms"
"Authorization": "Bearer {{access_token}}"
"Content-Type": "application/json"
data('{
    "title": "Postman - Testing Teams",
    "teamId": "{{_team}}"
}')


// Shows details for a room, by ID.// // Specify the room ID in the roomId parameter in the URI.// // https://developer.webex.com/endpoint-rooms-roomId-get.html
@name("Get Team room details")
GET "https://{{WEBEXAPI}}/rooms/{{_room}}"
"Authorization": "Bearer {{access_token}}"


// Updates details for a room, by ID.// // Specify the room ID in the roomId parameter in the URI.// // https://developer.webex.com/endpoint-rooms-roomId-put.html
@name("Update a Team room")
PUT "https://{{WEBEXAPI}}/rooms/{{_room}}"
"Authorization": "Bearer {{access_token}}"
"Content-Type": "application/json"
data('{
    "title": "Cisco Live - Let\'s meet in the DevNet Zone", 
    "isLocked": false
}')


// Deletes a room, by ID.// // Specify the room ID in the roomId parameter in the URI.// // https://developer.webex.com/endpoint-rooms-roomId-delete.html
@name("Delete a Team room")
DELETE "https://{{WEBEXAPI}}/rooms/{{_room}}"
"Authorization": "Bearer {{access_token}}"



// Delete a team.// // https://developer.webex.com/endpoint-teams-teamId-delete.html
@name("Delete a team ")
DELETE "https://{{WEBEXAPI}}/teams/{{_team}}"
"Authorization": "Bearer {{access_token}}"




