#!/usr/bin/env dothttp

@name("Add new Book")
POST "http://localhost/api/v1/book"
"Content-Type": "application/json"
data('{
	"name": "Harry Potter",
    "author": {
    	"name":"J.K. Rowlin",
    	"address": "England"
    },
    "publisher": {
    	"name": "Puffin",
    	"address": "England"
    },
    "price": "19.99"
}')


// adding a book by publisher and author id

@name("Add book by  pub,auth Ids")
POST "http://localhost//api/v1/book"
"Content-Type": "application/json"
data('{
	"name": "Harry Potter and Half Blood Prince",
    "author": {
    	"id":7
    },
    "publisher": {
    	"id":1
    },
    "price": "29.99"
}')


@name("Get All Books")
GET "http://localhost/api/v1/book"


@name("Get Book by Id")
GET "http://localhost//api/v1/book/5"


