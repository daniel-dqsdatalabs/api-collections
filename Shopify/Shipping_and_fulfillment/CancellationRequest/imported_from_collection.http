#!/usr/bin/env dothttp

// Sends a cancellation request to the fulfillment service of a fulfillment order.

@name("Sends a cancellation request")
POST "https://{{store_name}}.myshopify.com/admin/api/{{api_version}}/fulfillment_orders/{{fulfillment_order_id}}/cancellation_request.json"
"Content-Type": "application/json"



// Accepts a cancellation request sent to a fulfillment service for a fulfillment order.

@name("Accepts a cancellation request")
POST "https://{{store_name}}.myshopify.com/admin/api/{{api_version}}/fulfillment_orders/{{fulfillment_order_id}}/cancellation_request/accept.json"
"Content-Type": "application/json"



// Rejects a cancellation request sent to a fulfillment service for a fulfillment order.

@name("Rejects a cancellation request")
POST "https://{{store_name}}.myshopify.com/admin/api/{{api_version}}/fulfillment_orders/{{fulfillment_order_id}}/cancellation_request/reject.json"
"Content-Type": "application/json"




