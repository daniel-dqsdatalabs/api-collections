#!/usr/bin/env dothttp

@name("Session Text")
POST "https://apis.rmlconnect.net/wba/v1/messages"
"Content-Type": "application/json"
"Authorization": "{token}"
data('{
    "phone": "{mobile number}",
    "text": "{sample text}",
    "extra": "{your value}"
}')


@name("Session Text With Preview Url")
POST "https://apis.rmlconnect.net/wba/v1/messages"
"Content-Type": "application/json"
"Authorization": "{token}"
data('{
    "phone": "{mobile number}",
    "text": "{text with valid url}",
    "preview_url": true,
    "extra": "{your value}"
}')


@name("Session Document")
POST "https://apis.rmlconnect.net/wba/v1/messages"
"Content-Type": "application/json"
"Authorization": "{token}"
data('{
    "phone": "{mobile number}",
    "media": {
        "type": "document",
        "url": "{sample pdf url https://}",
        "file": "{sample .pdf file name}",
        "caption": "{sample text}"
    },
    "extra": "{your value}"
}')


