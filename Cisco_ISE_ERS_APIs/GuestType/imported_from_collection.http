#!/usr/bin/env dothttp

@name("guesttype")
GET "https://{{base_url}}/ers/config/guesttype"
basicauth("{{rest_username}}", "{{rest_password}}")
"Content-Type": "application/json"
"Accept": "application/json"
? "size"= "100"
? "page"= "1"
? "filter"= "name.CONTAINS.irv"
? "sortasc"= "name"
? "sortdsc"= "name"


@name("guesttype/{id}")
GET "https://{{base_url}}/ers/config/guesttype/{{id}}"
basicauth("{{rest_username}}", "{{rest_password}}")
"Content-Type": "application/json"
"Accept": "application/json"


