#!/usr/bin/env dothttp

@name("setMyName")
POST "https://{{default_address}}/{{instance}}/setMyName"
? "token"= "{{token}}"
json({
    "newName": "W2API - Best REST API for WhatsApp"
})


@name("setMyStatus")
POST "https://{{default_address}}/{{instance}}/setMyStatus"
? "token"= "{{token}}"
json({
    "newStatus": "Work & Trust"
})



