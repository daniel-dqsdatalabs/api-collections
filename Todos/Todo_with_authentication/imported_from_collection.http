#!/usr/bin/env dothttp

@name("Create Todo")
POST "https://{{apiUrl}}/todo"
"Content-Type": "application/json"
"X-Requested-With": "XMLHttpRequest"
"Authorization": "{{token}}"
data('{"title":"How to train your dragon", "desc":"Ever wonder how?", "date":"2019-02-12"}')


@name("Single Todo by id")
GET "https://{{apiUrl}}/todo/{{id}}"
"Content-Type": "application/json"
"X-Requested-With": "XMLHttpRequest"
"Authorization": "{{token}}"


@name("All Todo by Current User")
GET "https://{{apiUrl}}/todo/"
"Content-Type": "application/json"
"X-Requested-With": "XMLHttpRequest"
"Authorization": "{{token}}"


@name("Update Todo")
PUT "https://{{apiUrl}}/todo/{{id}}"
"Content-Type": "application/json"
"X-Requested-With": "XMLHttpRequest"
"Authorization": "{{token}}"
data('{"title":"With two hands"}')


@name("Done todo by Endpoint")
PUT "https://{{apiUrl}}/todo/done/{{id}}"
"Content-Type": "application/json"
"X-Requested-With": "XMLHttpRequest"
"Authorization": "{{token}}"
data('{"article":{"body":"With two hands"}}')


@name("Delete Todo")
DELETE "https://{{apiUrl}}/todo/{{id}}"
"Content-Type": "application/json"
"X-Requested-With": "XMLHttpRequest"
"Authorization": "{{token}}"




