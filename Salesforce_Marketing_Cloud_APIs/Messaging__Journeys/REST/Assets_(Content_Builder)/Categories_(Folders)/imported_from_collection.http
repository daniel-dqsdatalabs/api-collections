#!/usr/bin/env dothttp

// https://developer.salesforce.com/docs/atlas.en-us.mc-apis.meta/mc-apis/getCategories.htm// // Returns one or more Content Builder categories that are owned by or reside in your MID. To request categories that have been shared with your MID, add a scope parameter to the call.
@name("Get Categories (Folder)")
GET "https://{{et_subdomain}}.rest.marketingcloudapis.com/asset/v1/content/categories"


// https://developer.salesforce.com/docs/atlas.en-us.mc-apis.meta/mc-apis/getCategories.htm// // Returns one or more Content Builder categories that are owned by or reside in your MID. To request categories that have been shared with your MID, add a scope parameter to the call.
@name("Get Categories (Folder) - Shared")
GET "https://{{et_subdomain}}.rest.marketingcloudapis.com/asset/v1/content/categories"
? "scope"= "Shared"


// https://developer.salesforce.com/docs/atlas.en-us.mc-apis.meta/mc-apis/getCategories.htm// // Returns one or more Content Builder categories that are owned by or reside in your MID. To request categories that have been shared with your MID, add a scope parameter to the call.
@name("Get Categories (Folder) - With Filter")
GET "https://{{et_subdomain}}.rest.marketingcloudapis.com/asset/v1/content/categories"
? "$page"= "1"
? "$pagesize"= "10"
? "$orderBy"= "name desc"
? "$filter"= "parentId eq 516016"


// https://developer.salesforce.com/docs/atlas.en-us.mc-apis.meta/mc-apis/getCategory.htm// // Returns one Content Builder category by ID.
@name("Get Categories (Folder) - By ID")
GET "https://{{et_subdomain}}.rest.marketingcloudapis.com/asset/v1/content/categories/{{categoryId}}"


// https://developer.salesforce.com/docs/atlas.en-us.mc-apis.meta/mc-apis/createCategory.htm// // Creates a category (folder) in Content Builder.
@name("Create Category (Folder)")
POST "https://{{et_subdomain}}.rest.marketingcloudapis.com/asset/v1/content/categories"
json({
    "Name": "Postman Demo",
    "ParentId": 858661
})


// https://developer.salesforce.com/docs/atlas.en-us.mc-apis.meta/mc-apis/createCategory.htm// // Creates a category (folder) in Content Builder.
@name("Create Category (Folder) - Shared")
POST "https://{{et_subdomain}}.rest.marketingcloudapis.com/asset/v1/content/categories"
json({
    "Name": "Shared Pictures",
    "ParentId": 1003303,
    "SharingProperties": {
        "SharedWith": [
            1472123
        ],
        "SharingType": "edit"
    }
})


// https://developer.salesforce.com/docs/atlas.en-us.mc-apis.meta/mc-apis/updateCategory.htm// // Updates one Content Builder category by ID.
@name("Update Category (Folder) - By ID")
PUT "https://{{et_subdomain}}.rest.marketingcloudapis.com/asset/v1/content/categories/{{categoryId}}"
json({
    "Id": 1003306,
    "Name": "Updated Folder Name",
    "ParentId": 858661,
    "CategoryType": "asset",
    "MemberId": 1447640,
    "EnterpriseId": 1447640
})


// https://developer.salesforce.com/docs/atlas.en-us.mc-apis.meta/mc-apis/deleteCategory.htm// // Deletes one Content Builder category by ID.
@name("Delete Category (Folder) - By ID")
DELETE "https://{{et_subdomain}}.rest.marketingcloudapis.com/asset/v1/content/categories/{{categoryId}}"



