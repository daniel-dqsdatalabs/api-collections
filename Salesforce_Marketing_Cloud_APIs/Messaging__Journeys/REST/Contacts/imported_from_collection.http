#!/usr/bin/env dothttp

// https://developer.salesforce.com/docs/atlas.en-us.mc-apis.meta/mc-apis/schemasCollection.htm// // Retrieves the collection of all contact data schemas contained in the current account.
@name("Get Schemas Collection")
GET "https://{{et_subdomain}}.rest.marketingcloudapis.com/contacts/v1/schema"


// https://developer.salesforce.com/docs/atlas.en-us.noversion.mc-apis.meta/mc-apis/routes.htm
@name("Get Attribute Groups")
GET "https://{{et_subdomain}}.rest.marketingcloudapis.com/contacts/v1/attributeGroups"


// https://developer.salesforce.com/docs/atlas.en-us.mc-apis.meta/mc-apis/createContacts.htm// // Creates a new contact with the specified information in the specified attribute groups.
@name("Create Contacts")
POST "https://{{et_subdomain}}.rest.marketingcloudapis.com/contacts/v1/contacts"
json({
    "contactKey": "postmandemo1",
    "attributeSets": [
        {
            "name": "Email Addresses",
            "items": [
                {
                    "values": [
                        {
                            "name": "Email Address",
                            "value": "aaron.cates@salesforce.com"
                        },
                        {
                            "name": "HTML Enabled",
                            "value": true
                        }
                    ]
                }
            ]
        },
        {
            "name": "Email Demographics",
            "items": [
                {
                    "values": [
                        {
                            "name": "Last Name",
                            "value": "Cates"
                        },
                        {
                            "name": "First Name",
                            "value": "Aaron"
                        },
                        {
                            "name": "Country",
                            "value": "United States"
                        },
                        {
                            "name": "Preferred Store",
                            "value": "San Francisco"
                        }
                    ]
                }
            ]
        }
    ]
})


// https://developer.salesforce.com/docs/atlas.en-us.noversion.mc-apis.meta/mc-apis/updateContacts.htm// // Updates contacts with the specified information in the specified attribute groups.
@name("Update Contacts")
PATCH "https://{{et_subdomain}}.rest.marketingcloudapis.com/contacts/v1/contacts"
json({
    "contactKey": "postmandemo1",
    "attributeSets": [
        {
            "name": "Email Addresses",
            "items": [
                {
                    "values": [
                        {
                            "name": "Email Address",
                            "value": "aaron.cates+updated@salesforce.com"
                        },
                        {
                            "name": "HTML Enabled",
                            "value": true
                        }
                    ]
                }
            ]
        },
        {
            "name": "Email Demographics",
            "items": [
                {
                    "values": [
                        {
                            "name": "Last Name",
                            "value": "Cates"
                        },
                        {
                            "name": "First Name",
                            "value": "Aaron2"
                        },
                        {
                            "name": "Country",
                            "value": "United States"
                        },
                        {
                            "name": "Preferred Store",
                            "value": "San Francisco"
                        }
                    ]
                }
            ]
        }
    ]
})


// https://developer.salesforce.com/docs/atlas.en-us.noversion.mc-apis.meta/mc-apis/retrieveContactKey.htm// // Retrieves the contact key for one or more email channel addresses.
@name("Get Contact Key For Email Address")
POST "https://{{et_subdomain}}.rest.marketingcloudapis.com/contacts/v1/addresses/email/search"
json({
    "ChannelAddressList": [
        "aaron.cates@salesforce.com"
    ],
    "MaximumCount": 5
})


// https://developer.salesforce.com/docs/atlas.en-us.noversion.mc-apis.meta/mc-apis/DeleteByContactIDs.htm// // Deletes contacts based on specified contact ID values. This operations runs asynchronously. Use the OperationID value returned to check the status of the delete.
@name("Delete Contact - By ID")
POST "https://{{et_subdomain}}.rest.marketingcloudapis.com/contacts/v1/contacts/actions/delete"
? "type"= "keys"
json({
    "values": [
        193655592,
        1234567923123123
    ],
    "DeleteOperationType": "ContactAndAttributes"
})


// https://developer.salesforce.com/docs/atlas.en-us.noversion.mc-apis.meta/mc-apis/DeleteByContactKeys.htm// // Deletes contacts based on specified contact key values. This operation runs asynchronously. Use the OperationID value returned to check the status of the delete.
@name("Delete Contact - By Key")
POST "https://{{et_subdomain}}.rest.marketingcloudapis.com/contacts/v1/contacts/actions/delete"
? "type"= "keys"
json({
    "values": [
        "postmandemo2"
    ],
    "DeleteOperationType": "ContactAndAttributes"
})


// https://developer.salesforce.com/docs/atlas.en-us.noversion.mc-apis.meta/mc-apis/ContactsDeleteRequestsDetails.htm// // Retrieves details of contact delete requests for a date range.
@name("Get Contact Delete Request Details")
GET "https://{{et_subdomain}}.rest.marketingcloudapis.com/contacts/v1/contacts/analytics/deleterequests"


// https://developer.salesforce.com/docs/atlas.en-us.noversion.mc-apis.meta/mc-apis/ContactsDeleteRequestsSummary.htm// // Retrieves a summary of contact delete requests for a date range.
@name("Get Contact Delete Request Summary")
GET "https://{{et_subdomain}}.rest.marketingcloudapis.com/contacts/v1/contacts/analytics/deleterequests/summary"



