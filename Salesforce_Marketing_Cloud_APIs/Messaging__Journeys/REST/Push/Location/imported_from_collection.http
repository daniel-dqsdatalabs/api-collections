#!/usr/bin/env dothttp

// https://developer.salesforce.com/docs/atlas.en-us.noversion.mc-apis.meta/mc-apis/getLocations.htm// // Gets a list of all locations.
@name("Retrieve All Locations")
GET "https://{{et_subdomain}}.rest.marketingcloudapis.com/push/v1/location/"


// https://developer.salesforce.com/docs/atlas.en-us.noversion.mc-apis.meta/mc-apis/getSpecificLocation.htm// // ets a specific location.
@name("Get Specific Location")
GET "https://{{et_subdomain}}.rest.marketingcloudapis.com/push/v1/location/{{et_location_id}}"


// https://developer.salesforce.com/docs/atlas.en-us.noversion.mc-apis.meta/mc-apis/updateLocation.htm// // Updates an existing location by ID.
@name("Update Location")
PUT "https://{{et_subdomain}}.rest.marketingcloudapis.com/push/v1/location/{{et_location_id}}"
json({
    "name": "Downtown Seattle",
    "location": "Custom Location",
    "description": "Updated via the API!",
    "center": {
        "latitude": 40.750362,
        "longitude": -87.374712
    },
    "radius": 150
})


// https://developer.salesforce.com/docs/atlas.en-us.noversion.mc-apis.meta/mc-apis/deleteLocation.htm// // Deletes an existing location.
@name("Delete Location")
DELETE "https://{{et_subdomain}}.rest.marketingcloudapis.com/push/v1/location/{{et_location_id}}"


@name("Create Location")
POST "https://{{et_subdomain}}.rest.marketingcloudapis.com/push/v1/location"
json({
    "name": "API Location",
    "location": "Main Location on Elm Street",
    "description": "Location at 123 Elm St, Nowhere, CA 00000",
    "center": {
        "latitude": 30.750362,
        "longitude": -95.374712
    },
    "radius": 50,
    "attributes": [
        {
            "attribute": "Address 1",
            "value": "123 Elm St"
        },
        {
            "attribute": "City",
            "value": "Nowhere"
        },
        {
            "attribute": "State",
            "value": "CA"
        },
        {
            "attribute": "Zip",
            "value": "00000"
        }
    ]
})



