#!/usr/bin/env dothttp

# imported from https://www.getpostman.com/collections/d8ed5a08800a7e606296

@name("Get Comments")
GET "None://{{baseUrl}}/rest/api/3/issue/:issueIdOrKey/comment"
? "startAt"= "0"
? "maxResults"= "50"
? "orderBy"= "<string>"
? "expand"= "<string>"


@name("Add Comment")
POST "None://{{baseUrl}}/rest/api/3/issue/:issueIdOrKey/comment"
"Content-Type": "application/json"
? "expand"= "<string>"
data('{
    "body": {},
    "visibility": {
        "type": "<string>",
        "value": "<string>"
    },
    "properties": [
        {
            "key": "<string>",
            "value": {}
        },
        {
            "key": "<string>",
            "value": {}
        }
    ]
}')



