#!/usr/bin/env dothttp

# imported from https://www.getpostman.com/collections/d8ed5a08800a7e606296

@name("Get Options For Field")
GET "None://{{baseUrl}}/rest/api/3/customField/:fieldId/option"
? "startAt"= "0"
? "maxResults"= "1000"


@name("Update Custom Field Options")
PUT "None://{{baseUrl}}/rest/api/3/customField/:fieldId/option"
"Content-Type": "application/json"
data('{
    "options": [
        {
            "newValue": "<string>",
            "value": "<string>",
            "cascadingOptions": [
                {
                    "newValue": "<string>",
                    "value": "<string>"
                },
                {
                    "newValue": "<string>",
                    "value": "<string>"
                }
            ]
        },
        {
            "newValue": "<string>",
            "value": "<string>",
            "cascadingOptions": [
                {
                    "newValue": "<string>",
                    "value": "<string>"
                },
                {
                    "newValue": "<string>",
                    "value": "<string>"
                }
            ]
        }
    ]
}')


@name("Create Custom Field Options")
POST "None://{{baseUrl}}/rest/api/3/customField/:fieldId/option"
"Content-Type": "application/json"
data('{
    "options": [
        {
            "value": "<string>",
            "cascadingOptions": [
                "<string>",
                "<string>"
            ]
        },
        {
            "value": "<string>",
            "cascadingOptions": [
                "<string>",
                "<string>"
            ]
        }
    ]
}')



