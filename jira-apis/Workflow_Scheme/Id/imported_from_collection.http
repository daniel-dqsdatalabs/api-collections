#!/usr/bin/env dothttp

# imported from https://www.getpostman.com/collections/d8ed5a08800a7e606296

@name("Get Workflow Scheme")
GET "None://{{baseUrl}}/rest/api/3/workflowscheme/:id"
? "returnDraftIfExists"= "false"


@name("Update Workflow Scheme")
PUT "None://{{baseUrl}}/rest/api/3/workflowscheme/:id"
"Content-Type": "application/json"
data('{
    "name": "<string>",
    "description": "<string>",
    "defaultWorkflow": "<string>",
    "issueTypeMappings": "<object>",
    "updateDraftIfNeeded": "<boolean>"
}')


@name("Delete Workflow Scheme")
DELETE "None://{{baseUrl}}/rest/api/3/workflowscheme/:id"


@name("Create Draft Workflow Scheme")
POST "None://{{baseUrl}}/rest/api/3/workflowscheme/:id/createdraft"



