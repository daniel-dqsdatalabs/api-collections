#!/usr/bin/env dothttp

# imported from https://www.getpostman.com/collections/d8ed5a08800a7e606296

@name("Append Mappings To Issue Type Screen Scheme")
PUT "None://{{baseUrl}}/rest/api/3/issuetypescreenscheme/:issueTypeScreenSchemeId/mapping"
"Content-Type": "application/json"
data('{
    "issueTypeMappings": [
        {
            "issueTypeId": "<string>",
            "screenSchemeId": "<string>"
        },
        {
            "issueTypeId": "<string>",
            "screenSchemeId": "<string>"
        }
    ]
}')


@name("Update Issue Type Screen Scheme Default Screen Scheme")
PUT "None://{{baseUrl}}/rest/api/3/issuetypescreenscheme/:issueTypeScreenSchemeId/mapping/default"
"Content-Type": "application/json"
data('{
    "screenSchemeId": "<string>"
}')


@name("Remove Mappings From Issue Type Screen Scheme")
POST "None://{{baseUrl}}/rest/api/3/issuetypescreenscheme/:issueTypeScreenSchemeId/mapping/remove"
"Content-Type": "application/json"
data('{
    "issueTypeIds": [
        "<string>",
        "<string>"
    ]
}')



