#!/usr/bin/env dothttp

# imported from https://www.getpostman.com/collections/d8ed5a08800a7e606296

@name("Get Issue Type Screen Schemes")
GET "None://{{baseUrl}}/rest/api/3/issuetypescreenscheme"
? "startAt"= "0"
? "maxResults"= "50"
? "id"= "<long>"


@name("Create Issue Type Screen Scheme")
POST "{{baseUrl}}/rest/api/3/issuetypescreenscheme"
"Content-Type": "application/json"
data('{
    "issueTypeMappings": [
        {
            "issueTypeId": "<string>",
            "screenSchemeId": "<string>"
        },
        {
            "issueTypeId": "<string>",
            "screenSchemeId": "<string>"
        }
    ],
    "name": "<string>",
    "description": "<string>"
}')


@name("Get Issue Type Screen Scheme Items")
GET "None://{{baseUrl}}/rest/api/3/issuetypescreenscheme/mapping"
? "startAt"= "0"
? "maxResults"= "50"
? "issueTypeScreenSchemeId"= "<long>"



