#!/usr/bin/env dothttp

# imported from https://www.getpostman.com/collections/d8ed5a08800a7e606296

@name("Search For Issues Using Jql (Get)")
GET "None://{{baseUrl}}/rest/api/3/search"
basicauth("{{atlassian_email}}", "{{atlassian_token}}")
? "jql"= "project = {{jira_project}} AND component = {{jira_component}} ORDER BY Rank ASC"
? "startAt"= "0"
? "maxResults"= "50"
? "validateQuery"= "strict"
? "fields"= "*navigable"
? "expand"= "<string>"
? "properties"= "<string>"
? "fieldsByKeys"= "false"


@name("Search For Issues Using Jql (Post)")
POST "{{baseUrl}}/rest/api/3/search"
"Content-Type": "application/json"
data('{
    "jql": "<string>",
    "startAt": "<integer>",
    "maxResults": 50,
    "fields": [
        "<string>",
        "<string>"
    ],
    "validateQuery": "<string>",
    "expand": [
        "<string>",
        "<string>"
    ],
    "properties": [
        "<string>",
        "<string>"
    ],
    "fieldsByKeys": "<boolean>"
}')



