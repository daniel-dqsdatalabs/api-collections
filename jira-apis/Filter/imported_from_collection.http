#!/usr/bin/env dothttp

# imported from https://www.getpostman.com/collections/d8ed5a08800a7e606296

@name("Get Filters")
GET "None://{{baseUrl}}/rest/api/3/filter"
? "expand"= "<string>"


@name("Create Filter")
POST "None://{{baseUrl}}/rest/api/3/filter"
"Content-Type": "application/json"
? "expand"= "<string>"
data('{
    "name": "<string>",
    "description": "<string>",
    "jql": "<string>",
    "favourite": "<boolean>",
    "sharePermissions": [
        {
            "type": "<string>",
            "project": {
                "id": "<string>",
                "email": "<string>",
                "favourite": "<boolean>"
            },
            "role": {
                "name": "<string>",
                "translatedName": "<string>",
                "currentUserRole": "<boolean>"
            },
            "group": {
                "name": "<string>"
            }
        },
        {
            "type": "<string>",
            "project": {
                "id": "<string>",
                "email": "<string>",
                "favourite": "<boolean>"
            },
            "role": {
                "name": "<string>",
                "translatedName": "<string>",
                "currentUserRole": "<boolean>"
            },
            "group": {
                "name": "<string>"
            }
        }
    ]
}')


@name("Get Favorite Filters")
GET "None://{{baseUrl}}/rest/api/3/filter/favourite"
? "expand"= "<string>"


@name("Get My Filters")
GET "None://{{baseUrl}}/rest/api/3/filter/my"
? "expand"= "<string>"
? "includeFavourites"= "false"


@name("Search For Filters")
GET "None://{{baseUrl}}/rest/api/3/filter/search"
? "filterName"= "<string>"
? "accountId"= "<string>"
? "owner"= "<string>"
? "groupname"= "<string>"
? "projectId"= "<long>"
? "id"= "<long>"
? "orderBy"= "name"
? "startAt"= "0"
? "maxResults"= "50"
? "expand"= "<string>"



