#!/usr/bin/env dothttp

# imported from https://www.getpostman.com/collections/d8ed5a08800a7e606296

@name("Get Custom Field Contexts")
GET "None://{{baseUrl}}/rest/api/3/field/:fieldId/context"
? "isAnyIssueType"= "<boolean>"
? "isGlobalContext"= "<boolean>"
? "contextId"= "<long>"
? "startAt"= "0"
? "maxResults"= "50"


@name("Create Custom Field Context")
POST "None://{{baseUrl}}/rest/api/3/field/:fieldId/context"
"Content-Type": "application/json"
data('{
    "name": "<string>",
    "description": "<string>",
    "projectIds": [
        "<string>",
        "<string>"
    ],
    "issueTypeIds": [
        "<string>",
        "<string>"
    ]
}')


@name("Get Issue Types For Custom Field Context")
GET "None://{{baseUrl}}/rest/api/3/field/:fieldId/context/issueTypeMapping"
? "contextId"= "<long>"
? "contextId"= "<long>"
? "startAt"= "0"
? "maxResults"= "50"


@name("Get Custom Field Contexts For Projects And Issue Types")
POST "None://{{baseUrl}}/rest/api/3/field/:fieldId/context/mapping"
"Content-Type": "application/json"
? "startAt"= "0"
? "maxResults"= "50"
data('{
    "mappings": [
        {
            "issueTypeId": "<string>",
            "projectId": "<string>"
        },
        {
            "issueTypeId": "<string>",
            "projectId": "<string>"
        }
    ]
}')



