#!/usr/bin/env dothttp

@name("{{baseUrl}}/ExtData/GetColumn")
POST "https://{{baseUrl}}/ExtData/GetColumn"
"Content-Type": "application/json"
data('{
    "ID": "<string>",
    "Column": "<string>",
    "Table": "<string>"
}')


@name("{{baseUrl}}/ExtData/GetColumns")
POST "https://{{baseUrl}}/ExtData/GetColumns"
"Content-Type": "application/json"
data('{
    "ID": "<string>",
    "Table": "<string>",
    "IncludeNulls": "<boolean>"
}')


@name("{{baseUrl}}/ExtData/GetSchema")
POST "https://{{baseUrl}}/ExtData/GetSchema"
"Content-Type": "application/json"
data('{
    "Table": "<string>"
}')


// The value can either be a string, date, bool, double or integer.//             It must match the column definition.//             To clear a value set it to null.
@name("{{baseUrl}}/ExtData/SetColumn")
POST "https://{{baseUrl}}/ExtData/SetColumn"
"Content-Type": "application/json"
data('{
    "ID": "<string>",
    "Value": "<string>",
    "Column": "<string>",
    "Table": "<string>"
}')


// The value can either be a string, date, bool, double or integer.//             It must match the column definition.//             To clear a value set it to null.
@name("{{baseUrl}}/ExtData/SetColumns")
POST "https://{{baseUrl}}/ExtData/SetColumns"
"Content-Type": "application/json"
data('{
    "Columns": "<string>",
    "ID": "<string>",
    "Table": "<string>"
}')


@name("{{baseUrl}}/ExtData/UpdateSchema")
POST "https://{{baseUrl}}/ExtData/UpdateSchema"
"Content-Type": "application/json"
data('{
    "Columns": [
        {
            "Title": "<string>",
            "Type": "<string>",
            "Description": "<string>",
            "Name": "<string>"
        },
        {
            "Title": "<string>",
            "Type": "<string>",
            "Description": "<string>",
            "Name": "<string>"
        }
    ],
    "Table": "<string>"
}')



