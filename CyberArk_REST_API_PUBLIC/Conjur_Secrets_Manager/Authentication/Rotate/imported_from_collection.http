#!/usr/bin/env dothttp

// Any role can rotate its own API key. The name and password or current API key of the role must be provided via HTTP Basic Authorization.// // Note that the body of the request must be the empty string.
@name("Rotate Your Own API Key")
PUT "https://{{dapHostname}}/authn/{{dapAccount}}/api_key"
basicauth("{{dapUsername}}", "{{dapAPIKey}}")


// Rotates the API key of a host you can update.// // Note that the body of the request must be the empty string.
@name("Rotate A Host API Key")
PUT "https://{{dapHostname}}/authn/{{dapAccount}}/api_key"
basicauth("{{dapUsername}}", "{{dapAPIKey}}")
? "role"= "host:{{dapHostID}}"



