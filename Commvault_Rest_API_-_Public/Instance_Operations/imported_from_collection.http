"Accept": "{{Accept}}"
"Authtoken": "{{TOKEN}}"
? "clientname"= "{{clientName}}"
? "agent"= "File System"
? "instanceName"= "DefaultInstanceName"


// <h2>Description</h2>
// This operation creates an instance.

@name("Instance")
POST "https://{{ServerUrl}}/Instance"
"Accept": "application/json"
"Authtoken": "{{TOKEN}}"
"Content-Type": "application/json"
data('{
  "instanceProperties": {
    "description": "",
    "version": "",
    "instance": {
      "clientName": "{{clientName}}",
      "instanceName": "TestSQL3",
      "appName": "{{appName}}",
      "applicationId": 81
    },
    "mssqlInstance": {
      "vDITimeOut": 300,
      "useVss": false,
      "isOnDemand": false,
      "overrideHigherLevelSettings": {
        "useLocalSystemAccount": true,
        "overrideGlobalAuthentication": false,
        "userAccount": {
          "password": "",
          "userName": ""
        }
      },
      "MSSQLStorageDevice": {
        "logBackupStoragePolicy": {
          "storagePolicyName": "CSSP"
        },
        "commandLineStoragePolicy": {
          "storagePolicyName": "CSSP"
        }
      }
    }
  }
}')


