#!/usr/bin/env dothttp

// <h2>Description</h2>
// This operation returns a list of replicated VMs.

@name("Replicated VMs")
GET "https://{{ServerUrl}}/Replications/Monitors/streaming"
"Accept": "{{Accept}}"
"Authtoken": "{{TOKEN}}"
? "subclientId"= "0"


// <h2>Description</h2>
// This operation does testboot from Replication monitor.

@name("Testboot")
POST "https://{{ServerUrl}}/CreateTask"
"Accept": "{{Accept}}"
"Authtoken": "{{TOKEN}}"
"Content-Type": "application/json"
data('{
  "taskInfo": {
    "task": {
      "taskFlags": {
        "disabled": false
      },
      "taskType": 1,
      "ownerId": 1,
      "initiatedFrom": 2,
      "sequenceNumber": 0,
      "ownerName": "admin"
    },
    "subTasks": [
    	{
      "subTask": {
        "subTaskType": 1,
        "operationType": 4046
      },
      "options": {
        "adminOpts": {
          "drOrchestrationOption": {
            "replicationInfo": {
              "replicationId": [
                39
              ]
            },
            "advancedOptions": {
              "skipDisableNetworkAdapter": false
            },
            "operationType": 7,
            "initiatedfromMonitor": true
          }
        }
      },
      "subTaskOperation": 1
    }
    ]
  }
}')


